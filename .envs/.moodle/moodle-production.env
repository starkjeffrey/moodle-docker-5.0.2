# Production Environment Configuration for moodle.pucsr.edu.kh
# Pannasastra University of Cambodia - Siem Reap Campus

# Site Configuration
MOODLE_HOST=moodle.pucsr.edu.kh
MOODLE_SITE_NAME=PUCSR Moodle Learning Platform
MOODLE_SKIP_BOOTSTRAP=no
MOODLE_REVERSEPROXY=true
MOODLE_SSLPROXY=true

# Database Configuration
MOODLE_DATABASE_TYPE=mariadb
MOODLE_DATABASE_HOST=mariadb
MOODLE_DATABASE_PORT_NUMBER=3306
MOODLE_DATABASE_NAME=bitnami_moodle
MOODLE_DATABASE_USER=bn_moodle
MOODLE_DATABASE_PASSWORD=secure_password_change_me_now

# Admin Configuration
MOODLE_USERNAME=admin
MOODLE_PASSWORD=PUCSRadmin@2024!
MOODLE_EMAIL=it@pucsr.edu.kh
MOODLE_SITE_FULLNAME=Pannasastra University Cambodia - Siem Reap
MOODLE_SITE_SHORTNAME=PUCSR

# Language and Locale - BILINGUAL SUPPORT
MOODLE_LANG=en
MOODLE_LANGLIST=en,km
MOODLE_EXTRA_LANGS=km  # Khmer language support
MOODLE_LANGMENU=1
MOODLE_LANGCACHE=1
MOODLE_FILTER_MULTILANG=1

# PHP Configuration
PHP_ENABLE_OPCACHE=yes
PHP_MEMORY_LIMIT=512M
PHP_MAX_EXECUTION_TIME=300
PHP_MAX_INPUT_TIME=300
PHP_MAX_INPUT_VARS=5000
PHP_POST_MAX_SIZE=512M
PHP_UPLOAD_MAX_FILESIZE=512M

# Session Configuration
MOODLE_SESSION_HANDLER=redis
MOODLE_REDIS_HOST=redis
MOODLE_REDIS_PORT=6379
MOODLE_REDIS_PASSWORD=redis_secure_password
MOODLE_REDIS_DATABASE=0

# Cache Configuration
MOODLE_CACHE_TYPE=redis
MOODLE_CACHE_REDIS_HOST=redis
MOODLE_CACHE_REDIS_DATABASE=1

# Performance Settings
MOODLE_ENABLE_CACHE=yes
MOODLE_ENABLE_CRON=yes
MOODLE_CRON_ENABLED=1
MOODLE_CRON_SCHEDULE=*/5 * * * *

# Security Settings
MOODLE_SECURE_COOKIES=true
MOODLE_COOKIEHTTPONLY=true
MOODLE_HTTPS_ENABLED=true

# Email Configuration (Gmail example - update with your SMTP)
MOODLE_SMTP_HOST=smtp.gmail.com
MOODLE_SMTP_PORT=587
MOODLE_SMTP_USER=noreply@pucsr.edu.kh
MOODLE_SMTP_PASSWORD=your_app_password_here
MOODLE_SMTP_PROTOCOL=tls
MOODLE_NOREPLY_ADDRESS=noreply@pucsr.edu.kh

# Timezone
TZ=Asia/Phnom_Penh

# Maintenance Mode
MOODLE_MAINTENANCE_ENABLED=false
MOODLE_MAINTENANCE_MESSAGE=System maintenance in progress. Please check back later.

# Debug Settings (disable in production)
MOODLE_DEBUG_ENABLED=false
MOODLE_DEBUG_DISPLAY=false

# API Settings for Naga SIS Integration
MOODLE_WEBSERVICES_ENABLED=true
MOODLE_ENABLE_MOBILE_WEBSERVICES=true
NAGA_SIS_INTEGRATION=true
NAGA_SIS_API_URL=https://sis.pucsr.edu.kh/api
NAGA_SIS_API_TOKEN=your_naga_sis_token_here