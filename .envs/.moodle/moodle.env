# Moodle Database Configuration
MOODLE_DATABASE_TYPE=mariadb
MOODLE_DATABASE_HOST=mariadb
MOODLE_DATABASE_PORT_NUMBER=3306
MOODLE_DATABASE_NAME=bitnami_moodle
MOODLE_DATABASE_USER=bn_moodle
MOODLE_DATABASE_PASSWORD=moodle_password

# Moodle Admin Configuration
MOODLE_USERNAME=admin
MOODLE_PASSWORD=Admin@123456
MOODLE_EMAIL=admin@example.com
MOODLE_SITE_NAME=Moodle Learning Platform

# Moodle Settings
MOODLE_SKIP_BOOTSTRAP=no
MOODLE_LANG=en

# PHP Configuration (optimized for Moodle 5.0.2)
PHP_MEMORY_LIMIT=512M
PHP_MAX_EXECUTION_TIME=300
PHP_POST_MAX_SIZE=200M
PHP_UPLOAD_MAX_FILESIZE=200M

# Additional Bitnami Moodle Settings
# MOODLE_SMTP_HOST=smtp.gmail.com
# MOODLE_SMTP_PORT=587
# MOODLE_SMTP_USER=your_email@gmail.com
# MOODLE_SMTP_PASSWORD=your_password
# MOODLE_SMTP_PROTOCOL=tls

# Development only - remove for production
# ALLOW_EMPTY_PASSWORD=yes

# Redis Cache Configuration for High Concurrency
MOODLE_REDIS_HOST=redis
MOODLE_REDIS_PORT=6379
MOODLE_REDIS_PASSWORD=redis_password_change_me
MOODLE_REDIS_DB=0

# Cache Store Configuration
# Enable Redis for session handling and application cache
MOODLE_SESSION_HANDLER=redis
MOODLE_SESSION_REDIS_HOST=redis
MOODLE_SESSION_REDIS_PORT=6379
MOODLE_SESSION_REDIS_DB=1
MOODLE_SESSION_REDIS_PREFIX=moodle_session_

# Performance Settings for High Concurrency
PHP_MAX_INPUT_VARS=5000
PHP_OPCACHE_ENABLE=1
PHP_OPCACHE_MEMORY_CONSUMPTION=256
PHP_OPCACHE_MAX_ACCELERATED_FILES=10000
PHP_OPCACHE_VALIDATE_TIMESTAMPS=0