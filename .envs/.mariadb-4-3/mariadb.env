# MariaDB Configuration for Moodle 4.3.x
MARIADB_ROOT_USER=root
MARIADB_ROOT_PASSWORD=moodle_43_root_password
MARIADB_DATABASE=bitnami_moodle_43
MARIADB_USER=bn_moodle_43
MARIADB_PASSWORD=moodle_43_db_password
MARIADB_CHARACTER_SET=utf8mb4
MARIADB_COLLATE=utf8mb4_unicode_ci

# Performance tuning
MARIADB_EXTRA_FLAGS=--max_allowed_packet=256M --innodb_log_file_size=256M

# Allow empty root password (set to yes for development only)
ALLOW_EMPTY_PASSWORD=no